{
  "name": "imageviewerelectron",
  "version": "1.1.2",
  "description": "Um pequeno projeto de um visualizador de imagem",
  "homepage": "https://github.com/jamersonnascimento/ImageViewerElectron#readme",
  "bugs": {
    "url": "https://github.com/jamersonnascimento/ImageViewerElectron/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamersonnascimento/ImageViewerElectron.git"
  },
  "license": "MIT",
  "author": "Jamerson Nascimento",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:dir": "electron-builder --dir",
    "dist": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-packager . PhotoViewer-Lite --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:linux": "electron-packager . PhotoViewer-Lite --platform=linux --arch=x64 --out=dist --overwrite"
  },
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.jamerson.imageviewerelectron",
    "productName": "PhotoViewer Lite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!references/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/icon.png",
      "forceCodeSigning": false
    },
    "portable": {
      "artifactName": "PhotoViewer-Lite-${version}-portable.exe"
    }
  }
}
